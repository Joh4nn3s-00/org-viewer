{
  "name": "org-viewer",
  "displayName": "Org Viewer",
  "description": "Enhanced live preview for Org-mode (.org) and Markdown (.md) files â€” collapsible sections, TOC sidebar, syntax highlighting, token count, and Doc Map.",
  "version": "0.3.1",
  "publisher": "johannes-exe-or-something",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Joh4nn3s-00/org-viewer"
  },
  "icon": "media/marketplace-icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "org",
    "org-mode",
    "emacs",
    "markdown",
    "preview",
    "orgmode"
  ],
  "activationEvents": [
    "onLanguage:org",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "org",
        "aliases": [
          "Org Mode",
          "org"
        ],
        "extensions": [
          ".org"
        ]
      }
    ],
    "commands": [
      {
        "command": "docViewer.showPreview",
        "title": "Doc Viewer: Open Preview",
        "icon": {
          "light": "./media/icon-light.svg",
          "dark": "./media/icon-dark.svg"
        }
      },
      {
        "command": "docViewer.showPreviewToSide",
        "title": "Doc Viewer: Open Preview to the Side",
        "icon": {
          "light": "./media/icon-light.svg",
          "dark": "./media/icon-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "docViewer.showPreviewToSide",
          "when": "resourceLangId == org || resourceLangId == markdown",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "docViewer.showPreview",
          "when": "resourceLangId == org || resourceLangId == markdown"
        },
        {
          "command": "docViewer.showPreviewToSide",
          "when": "resourceLangId == org || resourceLangId == markdown"
        }
      ]
    },
    "keybindings": [
      {
        "command": "docViewer.showPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == org"
      },
      {
        "command": "docViewer.showPreviewToSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "resourceLangId == org"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "test": "node esbuild.js && node ./out/test/runTest.js",
    "vscode:prepublish": "npm run build",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.3",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "gpt-tokenizer": "^3.4.0",
    "highlight.js": "^11.11.1",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5",
    "uniorg": "^1.3.0",
    "uniorg-parse": "^3.2.0",
    "uniorg-rehype": "^2.2.0"
  }
}
