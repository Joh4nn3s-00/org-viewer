{
  "name": "org-viewer",
  "displayName": "Org Viewer",
  "description": "Live preview panel for Emacs Org-mode (.org) files, just like the built-in Markdown preview.",
  "version": "0.0.1",
  "publisher": "strideshift",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "org",
    "org-mode",
    "emacs",
    "preview",
    "orgmode"
  ],
  "activationEvents": [
    "onLanguage:org"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "org",
        "aliases": [
          "Org Mode",
          "org"
        ],
        "extensions": [
          ".org"
        ]
      }
    ],
    "commands": [
      {
        "command": "orgViewer.showPreview",
        "title": "Org: Open Preview",
        "icon": {
          "light": "./media/icon.svg",
          "dark": "./media/icon.svg"
        }
      },
      {
        "command": "orgViewer.showPreviewToSide",
        "title": "Org: Open Preview to the Side",
        "icon": {
          "light": "./media/icon.svg",
          "dark": "./media/icon.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "orgViewer.showPreviewToSide",
          "when": "resourceLangId == org",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "orgViewer.showPreview",
          "when": "resourceLangId == org"
        },
        {
          "command": "orgViewer.showPreviewToSide",
          "when": "resourceLangId == org"
        }
      ]
    },
    "keybindings": [
      {
        "command": "orgViewer.showPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == org"
      },
      {
        "command": "orgViewer.showPreviewToSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "resourceLangId == org"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run build",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.109.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.3",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "unified": "^11.0.5",
    "uniorg": "^1.3.0",
    "uniorg-parse": "^3.2.0",
    "uniorg-rehype": "^2.2.0"
  }
}
